# Environment variables for Trip Organizer
# Copy this file to .env and fill in your values

# Database Configuration
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_PORT=5432

# API Configuration  
API_PORT=8080
FRONTEND_PORT=8081
FRONTEND_URL=http://localhost:8081

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-that-is-at-least-256-bits-long-for-hs256-algorithm
JWT_ISSUER=trip-organizer-api
JWT_AUDIENCE=trip-organizer-client
JWT_EXPIRY=60

# Development/Production Mode
COMPOSE_PROFILES=development
# For production, use: COMPOSE_PROFILES=production
